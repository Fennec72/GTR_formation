/* Amusant mais pas joli : a voir jquery
.liste-items .item .h3 a img{ margin-right:-20px;	}
.liste-items .item .h3 a:hover{ padding-right:0px;padding-left:20px;	}
.liste-items .item .h3 a:hover img{ margin-right:0px;	}
*/
